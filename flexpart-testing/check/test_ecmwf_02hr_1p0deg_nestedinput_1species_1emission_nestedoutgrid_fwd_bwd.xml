 <distribution>

    <!-- Sample XML testing namelist -->

    <short_descr>
        Testing of Generic FLEXPART for small ECMWF problems with nested input and output
     
    </short_descr>

    <distropath>
        ../../flexpart_code/
    </distropath>

    <parmodpath>
        ../case_data/ecmwf_02hr_1p0deg_nestedinput/par_mod.f90
    </parmodpath>

    <execname>
        FLEXPART_GFORTRAN
    </execname>   

    <!--Second met case: ECMWF global fields + European nest, nested output -->

    <metcase>

        <short_descr>
            ECMWF global fields with European nest
        </short_descr>

        <metfiledir>
            ../case_data/met_data/ecmwf/t1_03h_ec1p0d_v2/
        </metfiledir>

        <metnestfiledir>
            ../case_data/met_data/ecmwf/t1_03h_ec0p5d_nest_v2/
        </metnestfiledir>

        <runcase>
            <short_descr>
                Forward run, 2 hours length, 1 species, 1 emissions, nested outgrid
            </short_descr>

            <casedir>
                ../case_data/ecmwf_02hr_1p0deg_nestedinput/case_ecmwf_02hr_1p0deg_nestedinput_1species_1emission_nestedoutgrid_fwd/rundir_template
            </casedir>

            <controldatadir>
                ../case_data/ecmwf_02hr_1p0deg_nestedinput/case_ecmwf_02hr_1p0deg_nestedinput_1species_1emission_nestedoutgrid_fwd/control_output
            </controldatadir>

            <basictest>
                <short_descr>
                    Max error over entire temporal and spatial mother domain
                </short_descr>

                <type>
                    mother_all_vars_maxabserr
                </type>

                <max_threshold>
                   1.0E-3
                </max_threshold>
            </basictest>

            <basictest>
                <short_descr>
                    Max error over entire temporal and spatial nested domain
                </short_descr>

                <type>
                    nest_all_vars_maxabserr
                </type>

                <max_threshold>
                   1.0E-3
                </max_threshold>
            </basictest>

        </runcase>

        <runcase>
            <short_descr>
                Backward run, 2 hours length, 1 species, 1 emissions, nested outgrid
            </short_descr>

            <casedir>
                ../case_data/ecmwf_02hr_1p0deg_nestedinput/case_ecmwf_02hr_1p0deg_nestedinput_1species_1emission_nestedoutgrid_bwd/rundir_template
            </casedir>

            <controldatadir>
                ../case_data/ecmwf_02hr_1p0deg_nestedinput/case_ecmwf_02hr_1p0deg_nestedinput_1species_1emission_nestedoutgrid_bwd/control_output
            </controldatadir>


            <basictest>
                <short_descr>
                    Max error over entire temporal and spatial mother domain
                </short_descr>

                <type>
                    mother_all_vars_maxabserr
                </type>

                <max_threshold>
                   1.0E-3
                </max_threshold>
            </basictest>

            <basictest>
                <short_descr>
                    Max error over entire temporal and spatial nest domain
                </short_descr>

                <type>
                    nest_all_vars_maxabserr
                </type>

                <max_threshold>
                   1.0E-3
                </max_threshold>
            </basictest>



        </runcase>

    </metcase>



</distribution>
